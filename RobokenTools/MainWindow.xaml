<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:oxy="http://oxyplot.org/wpf"
        xmlns:local="clr-namespace:RobokenTools"
        xmlns:Views="clr-namespace:RobokenTools.Views" x:Class="RobokenTools.MainWindow"
        mc:Ignorable="d"
        Title="ロボ研ツール" Height="450" Width="800">
    <Grid>
        <Menu VerticalAlignment="Top">
            <MenuItem Header="ファイル">
                <MenuItem Header="読み込み" Command="{Binding LoadCommand}"/>
            </MenuItem>
        </Menu>

        <oxy:Plot x:Name="plotV" Margin="10,23,10,33.5"/>
        <Slider x:Name="spanS" Margin="103,0,10,10.5" VerticalAlignment="Bottom" Maximum="50000" Minimum="100" Value="{Binding Span}"/>
        <Label Content="{Binding DeltaLabel, Mode=TwoWay}" HorizontalAlignment="Left" Margin="10,0,0,10.5" VerticalAlignment="Bottom" Height="23" Width="88" VerticalContentAlignment="Center"/>
    </Grid>
</Window>
