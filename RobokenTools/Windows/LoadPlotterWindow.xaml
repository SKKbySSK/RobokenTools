<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RobokenTools.Windows"
        xmlns:Views="clr-namespace:RobokenTools.Views" x:Class="RobokenTools.Windows.LoadPlotterWindow"
        mc:Ignorable="d"
        Title="LoadPlotterWindow" Height="500" Width="800" Topmost="True">
    <Grid>
        <StackPanel Margin="0,0,0,366.5">
            <StackPanel Orientation="Horizontal">
                <Label Content="最大データ数"/>
                <Label Content="{Binding ElementName=maxDataS, Path=Value}"/>
            </StackPanel>
            <Slider x:Name="maxDataS" Maximum="5000" Minimum="100" Value="{Binding MaxDataCount}"/>
        </StackPanel>
        <TabControl Margin="0,56,0,0.5">
            <TabItem Header="シリアル接続">
                <Views:ConnectionView Margin="10" Command="{Binding LoadSerialConnectionCommand}"/>
            </TabItem>
            <TabItem Header="同期通信">
                <Views:SyncConnectionView Margin="10" Command="{Binding LoadSyncSerialConnectionCommand}"/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
